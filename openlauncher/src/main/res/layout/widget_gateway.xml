<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <LinearLayout
        android:id="@+id/widget_gateway_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/widget_bg_white_20"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="7dp"
        android:paddingEnd="15dp"
        android:paddingBottom="7dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/widget_gateway_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_gateway_title"
            android:textColor="@color/default_text_color"
            android:textSize="18sp"
            tools:text="RP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_gateway_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="ï¼š2944213" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <android.widget.ImageView
                android:id="@+id/widget_gateway_signal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/widget_gateway_title"
                android:layout_alignBottom="@+id/widget_gateway_title"
                android:layout_toStartOf="@+id/widget_gateway_signal"
                android:src="@mipmap/icon_gateway_wifi0" />

            <!---->
            <android.widget.TextView
                android:id="@+id/widget_gateway_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/widget_gateway_title"
                android:layout_alignBottom="@+id/widget_gateway_title"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:drawablePadding="5dp"
                android:gravity="end|center_vertical"
                android:textSize="11sp"
                tools:ignore="RelativeOverlap"
                tools:text=" Ping  755ms" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
