<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="#0BBD8B" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="4dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#0BBD8B" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="4dp" />
        </shape>
    </item>
</selector>
