<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/add_node_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@color/default_background_color"
        android:text="@string/custom_node"
        android:paddingLeft="@dimen/dp_15"
        android:visibility="gone"
        android:gravity="center_vertical"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/use_time"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/node_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="200dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                tools:text="https://eth.xxx.xxx.xxxxxxx.xxxxxxx.xx"
                android:textColor="@color/default_text_color"
                />
            <ImageView
                android:id="@+id/node_xieyi"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/node_name"
                android:gravity="center|right"
                android:src="@mipmap/duihao"
                android:scaleType="centerInside"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/use_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:drawablePadding="7dp"
            android:layout_centerVertical="true"
            tools:text="1000ms"
            tools:drawableRight="@drawable/circle_green_c10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line"
            />
    </RelativeLayout>
</LinearLayout>