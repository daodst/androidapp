<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/default_top_background_color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/default_text_color"
            android:text="@string/address_books_name"
            />
        <EditText
            android:id="@+id/lxr_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="@string/enter_lxradd"
            android:textSize="@dimen/dp_14"
            android:maxLength="40"
            android:background="@color/default_top_background_color"
            android:textColorHint="@color/default_hint_text_color"
            android:textColor="@color/default_text_two_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/default_top_background_color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/default_text_color"
            android:text="@string/remarks_xuantian"
            />
        <EditText
            android:id="@+id/lxr_remark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="@string/enter_lxr_remark"
            android:textSize="@dimen/dp_12"
            android:maxLength="100"
            android:background="@color/default_top_background_color"
            android:textColorHint="@color/default_hint_text_color"
            android:textColor="@color/default_text_two_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/default_top_background_color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/default_text_color"
            android:text="@string/address_books"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/lxr_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:hint="@string/enter_address_tips"
                android:textSize="@dimen/dp_12"
                android:maxLength="100"
                android:background="@color/default_top_background_color"
                android:textColorHint="@color/default_hint_text_color"
                android:textColor="@color/default_text_two_color"
                />
            <ImageView
                android:id="@+id/lxr_addordel"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/saoyisao_blue"
                android:scaleType="centerInside"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
