<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/token_info_layout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="1dp"
    android:background="@color/default_top_background_color"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/token_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/token_detail"
        android:textColor="@color/shoukuan_bg" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="20dp"
        android:background="@color/default_dividing_line" />

    <TextView
        android:id="@+id/token_shouyi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/wakuangshouyi"
        android:textColor="@color/shoukuan_bg" />
</LinearLayout>
