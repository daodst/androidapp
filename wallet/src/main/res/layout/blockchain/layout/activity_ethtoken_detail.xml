                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/btc_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_three_color"
                android:visibility="gone"
                android:text="@string/btc"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/btc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_25"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_two_color"
                android:visibility="gone"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/creat_token_zongliang"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_zongliang"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_stress_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/creat_token_yuwa"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_yuwa"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
