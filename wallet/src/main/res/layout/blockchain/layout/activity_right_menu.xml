<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/default_top_background_color"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.wallet.ctc.view.listview.NoScrollListView
            android:id="@+id/wallet_list_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:dividerHeight="0dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_dividing_line"
            />
        <TextView
            android:id="@+id/scan_it"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/default_text_three_color"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:drawableLeft="@mipmap/saoyisao1"
            android:drawablePadding="13dp"
            android:text="@string/scan_it"
            />
        <TextView
            android:id="@+id/wallet"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/default_text_three_color"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:drawableLeft="@mipmap/wallet"
            android:drawablePadding="13dp"
            android:text="@string/create_wallet"
            />
        <TextView
            android:id="@+id/mangwallet"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/default_text_three_color"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:visibility="gone"
            android:drawableLeft="@mipmap/wallet"
            android:drawablePadding="13dp"
            android:text="@string/manage_wallet"
            />
    </LinearLayout>
</ScrollView>
