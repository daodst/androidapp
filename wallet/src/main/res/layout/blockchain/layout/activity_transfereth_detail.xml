<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@color/default_theme_color">
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/back"
                android:scaleType="centerInside"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/transaction_detail"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_head_logo"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/xiangqing_duihao"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            tools:text="ï¼"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="-50dp"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@mipmap/wallet_history_detail_top_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">
                    <TextView
                        android:id="@+id/eth_feiyong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:maxWidth="250dp"
                        android:textStyle="bold"
                        android:textColor="@color/default_tip_color"
                        android:textSize="30sp"
                        tools:text="+100000.2541000454552" />
                    <TextView
                        android:id="@+id/assete_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_tip_color"
                        android:layout_toRightOf="@+id/eth_feiyong"
                        android:layout_alignBottom="@+id/eth_feiyong"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textSize="15sp"
                        tools:text="ETH"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="30dp"
                android:background="@mipmap/wallet_history_detail_bottom_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/fakuan"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/fakuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        android:textSize="14sp"
                        tools:text="dst1wjqzctc0qy5lkr5cay0dmqymw8jfw0cmvjn32w"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/shoukuanfang"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/shoukuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        android:textSize="14sp"
                        tools:text="dst1wjqzctc0qy5lkr5cay0dmqymw8jfw0cmvjn32w" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/miner_costs"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/miner_costs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_theme_color"
                        android:textSize="14sp"
                        tools:text="0.000054 dst"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/remarks"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_theme_color"
                        tools:text="xxxxdfgdss"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    android:layout_marginTop="@dimen/dp_25"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/jiaoyihao"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/jiaoyihao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        tools:text="0x7cd2dBB1D150AC678f90Bd56d2849B13d5F51e62"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/qukuai"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/qukuai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        android:textSize="14sp"
                        tools:text="45069"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/jiaoyishijian"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/jiaoyishijian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        tools:text="2023-04-27 16:42:16"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line1_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imgqrcode"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/default_background_color"
                        android:padding="@dimen/dp_10"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/copyurl"
                        android:layout_width="100dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_height="32dp"
                        android:background="@drawable/lin_huise_bg"
                        android:textSize="12sp"
                        android:text="@string/copy_url"
                        android:textColor="@color/default_text_color"
                        android:gravity="center"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/jiansuohao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff6600"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/lin_yellow_bg2"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="12sp"
                    android:text="@string/jiansuohao"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
