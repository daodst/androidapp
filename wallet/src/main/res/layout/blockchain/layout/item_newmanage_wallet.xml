<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/lin_mangage_wallet_bg"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <common.app.my.view.CircularImage
                android:id="@+id/wallet_logo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_10"
                    tools:text="dasdads"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/wallet_type"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/dimen_28dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wallet_name"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    tools:text="@string/default_token_name"
                    android:background="@drawable/lin_cc_bg"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textColor="#cccccc"
                    />
                <TextView
                    android:id="@+id/wallet_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wallet_name"
                    android:layout_toRightOf="@+id/wallet_type"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    tools:text="dasdads"
                    android:textSize="12sp"
                    android:textColor="#909397"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_17"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_15"
                android:scaleType="fitStart"
                android:src="@mipmap/mangage_wallet_more"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
