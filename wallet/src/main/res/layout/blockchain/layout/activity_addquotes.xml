<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/green_263138"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.5dip"
        android:background="#253238"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical|left"
            android:textColor="@color/white"
            android:textSize="@dimen/sizedefault"
            android:paddingLeft="@dimen/dp_10"
            android:drawableLeft="@mipmap/back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sizetitlebar"
            />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/default_text_color_stress_two"
            android:textSize="@dimen/sizedefault"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/img_action"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/dp_45"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/assets_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0.5dp"
        android:divider="@color/green_3A454C"
        >

    </ListView>
    <LinearLayout
        android:id="@+id/nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nodata"
            android:textColor="@color/default_text_three_color"
            android:drawableTop="@mipmap/nodata"
            android:textSize="14sp"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>