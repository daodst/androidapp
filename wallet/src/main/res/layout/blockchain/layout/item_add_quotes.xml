<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/green_263138"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/assets_type"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textColor="@color/black_97A2B3"
        android:background="@color/green_18262c"
        android:text="P"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/assets_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="ETH"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            >
        </LinearLayout>
        <CheckBox
            android:id="@+id/assets_choose"
            android:layout_width="48dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:button="@drawable/add_quotes_checkbox"
            android:layout_height="22dp" />
    </LinearLayout>
</LinearLayout>