<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_top_background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:background="@drawable/shoukuan_bg"
            />
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/back"
            android:scaleType="centerInside"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/transaction_detail"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/img_head_logo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/xiangqing_duihao"
            android:scaleType="centerCrop" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingBottom="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/eth_feiyong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/default_text_color"
                    android:layout_centerInParent="true"
                    android:maxWidth="250dp"
                    tools:text="0.01"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/assete_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_three_color"
                    android:layout_toRightOf="@+id/eth_feiyong"
                    android:layout_alignBottom="@+id/eth_feiyong"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textSize="12sp"
                    android:text="ether"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/transfer_success"
                android:visibility="visible"
                android:gravity="center"
                android:background="@drawable/lin_green_bg"
                android:textColor="@color/white"
                android:textSize="14sp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_three_color"
                android:text="@string/fakuan"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/fakuan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_two_color"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_three_color"
                android:text="@string/shoukuanfang"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/shoukuan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_two_color"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_three_color"
                android:text="@string/miner_costs"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/miner_costs"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_two_color"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_three_color"
                android:text="@string/remarks"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_two_color"
                android:textSize="12sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/jiaoyihao"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/jiaoyihao"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color_stress_two"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/qukuai"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/qukuai"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_two_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/jiaoyishijian"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/jiaoyishijian"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_two_color"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line1_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imgqrcode"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/default_background_color"
                        android:padding="@dimen/dp_10"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/copyurl"
                        android:layout_width="100dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_height="32dp"
                        android:background="@drawable/lin_huise_bg"
                        android:textSize="12sp"
                        android:text="@string/copy_url"
                        android:textColor="@color/default_text_color"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>