<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/buzhou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/chuangjian2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/default_text_three_color"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="@string/basic_information"
                    android:layout_below="@+id/buzhou"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/step_two"
                    />
                <TextView
                    android:id="@+id/step_two"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/default_text_three_color"
                    android:text="@string/create_token_sum"
                    android:layout_below="@+id/buzhou"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/default_text_three_color"
                    android:text="@string/create_token_success"
                    android:layout_toRightOf="@+id/step_two"
                    android:layout_below="@+id/buzhou"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:background="@color/default_top_background_color"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/create_token_jingdu"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="55dp"
                    android:inputType="numberSigned"
                    android:textSize="14sp"
                    android:maxLength="3"
                    android:text="10"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_hint_text_color"
                    android:hint="@string/create_token_jingdu"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />
                <EditText
                    android:id="@+id/create_token_sum2"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="55dp"
                    android:inputType="numberSigned"
                    android:textSize="14sp"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_hint_text_color"
                    android:hint="@string/create_token_sum2"
                    android:maxLength="18"
                    android:paddingLeft="@dimen/dp_5"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />
                <EditText
                    android:id="@+id/create_token_wa"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="55dp"
                    android:textSize="14sp"
                    android:inputType="numberSigned"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_hint_text_color"
                    android:hint="@string/create_token_wa"
                    android:paddingLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:maxLength="18"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/nianshouyi"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:background="@color/default_top_background_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >


                <EditText
                    android:id="@+id/mineral"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp_10"
                    android:maxLength="15"
                    android:background="@null"
                    android:textSize="14sp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_hint_text_color"
                    android:hint="@string/create_token_shouyi"
                    android:maxLines="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_two_color"
                    android:textSize="14sp"
                    android:text="%"
                    />
                <TextView
                    android:id="@+id/zidong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/create_token_zidong"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:textColor="#00BF84"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/dp_20"
                />
            <EditText
                android:id="@+id/create_token_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textSize="14sp"
                android:background="@color/default_top_background_color"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_text_color"
                android:paddingRight="@dimen/dp_20"
                android:hint="@string/create_token_email"
                android:paddingLeft="@dimen/dp_25"
                android:maxLines="1"
                android:maxLength="255"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                />
            <TextView
                android:id="@+id/tishi"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/create_token_email_tishi"
                android:drawableLeft="@mipmap/create_gantanhao"
                android:textSize="@dimen/size_12"
                android:background="#FFF9CA"
                android:textColor="#82782E"
                />

            <TextView
                android:id="@+id/next_step"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/default_btn_bg"
                android:textColor="@color/default_button_text_color"
                android:text="@string/confirm"
                android:textSize="18sp"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>