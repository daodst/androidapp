<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/shenfen_lin"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/default_top_background_color"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <common.app.my.view.CircularImage
                    android:id="@+id/wallet_logo"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_18"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/splash_jump_bg" />

                <TextView
                    android:id="@+id/wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/wallet_logo"
                    android:layout_centerVertical="true"
                    tools:text="identity_name"
                    android:textStyle="bold"
                    android:textColor="@color/default_text_two_color"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_go"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/default_top_background_color"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/backup_wallet"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/default_text_color"
                    />
                <TextView
                    android:id="@+id/not_backed_up"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:drawableRight="@mipmap/right_go"
                    android:drawablePadding="@dimen/dp_5"
                    tools:text="@string/not_backed_up"
                    android:textSize="13sp"
                    android:textColor="@color/red"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/manage_identity_wallet_remark"
                android:gravity="center_vertical"
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/default_text_three_color"
                />
            <RelativeLayout
                android:id="@+id/add_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55dp"
                android:padding="@dimen/dp_15"
                android:background="@color/default_top_background_color"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_coin_type"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/default_text_color"
                        />
                    <TextView
                        android:id="@+id/coin_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/add_coin"
                        tools:text=" EOS.CKB.KSM.XTZ"
                        android:textSize="13sp"
                        android:drawablePadding="@dimen/dp_10"
                        android:textColor="@color/default_text_three_color"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_go"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/me_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@mipmap/right_go"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/default_top_background_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="@string/change_pwd"
                android:textColor="@color/default_text_color" />
            <TextView
                android:id="@+id/drop_out"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/default_top_background_color"
                android:textColor="@color/red"
                android:gravity="center"
                android:text="@string/drop_out"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
