<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/default_top_background_color">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/import_guancha_address_alert"
                android:textColor="#ff666666"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/default_dividing_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="15dp"
                android:text="@string/import_observe_wallet_remind"
                android:textStyle="bold"
                android:textColor="@color/default_text_color"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <EditText
                    android:id="@+id/wallet_address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/in_wallet_address"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_hint_text_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:text="@string/wallet_name"
                android:textStyle="bold"
                android:textColor="@color/default_text_color"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <EditText
                    android:id="@+id/wallet_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/please_input_wallet_name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/default_hint_text_color"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:paddingLeft="@dimen/dp_15"
                android:visibility="gone"
                tools:visibility="visible"
                android:paddingRight="@dimen/dp_15">

                <CheckBox
                    android:id="@+id/check"
                    style="@style/MyCheckboxStyle"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/protocol_checkbox"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/im_agree"
                    android:textColor="@color/default_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/look_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/protocol"
                    android:textColor="@color/default_theme_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                style="@style/common_button"
                android:id="@+id/import_wallet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/import_begin"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="19dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="19dp"
                android:orientation="horizontal"
                android:background="@drawable/round_fff5ea_c8">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/tip_alert_small_icon"/>
                <TextView
                    android:id="@+id/create_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/ipmort_guancha_wallet_tip"
                    android:textColor="@color/default_text_two_color"
                    android:lineSpacingExtra="5dp"
                    />
            </LinearLayout>



            <TextView
                android:id="@+id/what_is_observe_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/what_is_observe_wallet"
                android:textColor="@color/default_theme_color"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
