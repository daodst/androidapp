<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_top_background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_head_logo"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/shoukuan_bg"
            />
        <RelativeLayout
            android:id="@+id/topRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/back"
                android:scaleType="centerInside"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/default_button_text_color"
                android:text="@string/token_detail"
                android:textSize="18sp" />
        </RelativeLayout>

        <common.app.my.view.CircularImage
            android:id="@+id/img_head_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/topRelativeLayout"
            android:layout_marginTop="15dp"
            android:src="@mipmap/token_detail"
            android:scaleType="centerCrop" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingBottom="20dp"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_three_color"
                android:text="@string/token_name"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/token_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_color"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_three_color"
                android:text="@string/token_suoxie"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/token_suoxie"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_color"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_three_color"
                android:text="@string/creat_token_time"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/creat_token_time"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_color"
                android:textSize="12sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/creat_token_zongliang"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_zongliang"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color_stress_two"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/creat_token_yuwa"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_yuwa"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/creat_token_kuanggong"
                        android:visibility="gone"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_kuanggong"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:visibility="gone"
                        android:text="@string/creat_token_fabi"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_fabi"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/creat_token_pos"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_pos"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/creat_token_tongsuo"
                        android:visibility="gone"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_tongsuo"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/creat_token_guanwang"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/creat_token_guanwang"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
