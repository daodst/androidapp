<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/lin_write_bg2"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <common.app.my.view.CircularImage
                android:id="@+id/wallet_logo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_10"
                    tools:text="dasdads"
                    android:textSize="14sp"
                    android:textColor="@color/default_text_three_color"
                    />
                <ImageView
                    android:id="@+id/go_beifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/wallet_name"
                    android:src="@mipmap/place_beizhu"
                    />
                <TextView
                    android:id="@+id/wallet_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wallet_name"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    tools:text="dasdads"
                    android:textSize="12sp"
                    android:textColor="@color/default_hint_text_color"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_go"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_dividing_line"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/set_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@mipmap/manger_wallet_no"
                android:gravity="center"
                android:visibility="gone"
                android:drawablePadding="@dimen/dp_10"
                android:scaleType="centerInside"
                android:textColor="@color/default_text_two_color"
                android:text="@string/set_as_default_wallet"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/enther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_hint_text_color"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/wallet_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_two_color"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/enther"
                android:layout_marginRight="@dimen/dp_5"
                tools:text="1000"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
