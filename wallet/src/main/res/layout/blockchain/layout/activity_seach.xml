<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/default_top_background_color"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45.5dip"
        android:background="@color/default_titlebar_bg_color"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/choose_type"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:textColor="#161B2F"
            android:text="@string/app_name"
            android:visibility="gone"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:drawableRight="@mipmap/seach_type_down"
            />
        <EditText
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@+id/choose_type"
            android:layout_marginRight="53dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:drawablePadding="7dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/default_text_two_color"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:hint="@string/seach_token"
            android:drawableLeft="@mipmap/seach"
            android:textColorHint="@color/default_hint_text_color"
            android:textSize="14sp"
            android:background="@drawable/lin_e7e7e7_bg"
            />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/default_text_color_stress_two"
            android:textSize="14sp"
            android:text="@string/cancel"
            android:layout_alignParentRight="true"
            />
        <View
            android:id="@+id/div_view"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/default_titlebar_dividing_line_color"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <common.app.ui.view.PullToRefreshLayout
            android:id="@+id/refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/dp_0"
            android:listSelector="@android:color/transparent">
            <include layout="@layout/refresh_head" />
            <common.app.ui.view.PullableListView
                android:id="@+id/wallet_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:dividerHeight="0.5dp"
                android:divider="@color/default_dividing_line"
                android:listSelector="@android:color/transparent"/>

            <include layout="@layout/load_more" />
        </common.app.ui.view.PullToRefreshLayout>
        <LinearLayout
            android:id="@+id/nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/notoken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_color_stress_two"
                android:layout_marginTop="86dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="@string/notoken"
                />
            <TextView
                android:id="@+id/nodatatxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:text="@string/nofind_token"
                android:textColor="@color/default_text_three_color"
                android:drawableTop="@mipmap/quotes_seach"
                android:drawablePadding="@dimen/dp_10"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_dividing_line"
        />
    <TextView
        android:id="@+id/push_token"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/default_top_background_color"
        android:textColor="@color/default_theme_color"
        android:textSize="14sp"
        android:text="@string/push_new_token"
        android:gravity="center"
        />
</LinearLayout>
