<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/default_top_background_color"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_three_color"
            android:textSize="14sp"
            android:text="@string/block_sum"
            />
        <TextView
            android:id="@+id/block_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_two_color"
            android:textSize="14sp"
            android:text="0"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/default_top_background_color"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_marginTop="0.5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_three_color"
            android:textSize="14sp"
            android:text="@string/this_block_sum"
            />
        <TextView
            android:id="@+id/this_block_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_two_color"
            android:textSize="14sp"
            android:text="0"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/default_top_background_color"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_marginTop="0.5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_three_color"
            android:textSize="14sp"
            android:text="@string/last_sync_time"
            />
        <TextView
            android:id="@+id/last_sync_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_two_color"
            android:textSize="14sp"
            android:text=""
            android:gravity="right"
            />
    </LinearLayout>
    
    <TextView
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/default_btn_bg"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/details"
        android:textColor="@color/default_button_text_color"
        />
</LinearLayout>