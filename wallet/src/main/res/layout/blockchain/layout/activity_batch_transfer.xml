<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_top_background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/default_titlebar_bg_color"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/backs"
            android:scaleType="centerInside"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/default_titlebar_title_color"
            tools:text="ETH"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/imgqrcode"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/saoyisao"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/payee_wallet_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:textColor="@color/default_hint_text_color"
                    android:textSize="14sp"
                    android:hint="@string/payee_wallet_address"
                    android:gravity="center_vertical"
                    android:background="@null"
                    />
                <ImageView
                    android:id="@+id/go_adddresslist"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/phonelist"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/transfer_amount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:textColorHint="@color/default_hint_text_color"
                    android:textColor="@color/default_hint_text_color"
                    android:textSize="14sp"
                    android:inputType="numberDecimal"
                    android:hint="@string/transfer_amount"
                    android:gravity="center_vertical"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/yue"
                    android:layout_width="wrap_content"
                    android:textColorHint="@color/default_hint_text_color"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_hint_text_color"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                />
            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="@color/default_hint_text_color"
                android:textSize="14sp"
                android:textColorHint="@color/default_hint_text_color"
                android:hint="@string/remarks_kexuan"
                android:gravity="center_vertical"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_hint_text_color"
                    android:text="@string/pay_wallet_address"
                    android:textSize="14sp"
                    android:layout_marginRight="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/fromaddress"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:textColor="@color/default_hint_text_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                />
            <LinearLayout
                android:id="@+id/putong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/kgfee"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textColor="@color/default_hint_text_color"
                android:textSize="14sp"
                android:text="@string/miner_costs1dm"
                android:gravity="center_vertical"
                android:background="@null"
                />
            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:max="90"
                android:progress="0"/>
            <RelativeLayout
                android:id="@+id/seek_bar_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_three_color"
                    android:text="@string/slow"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/feiyong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_three_color"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    tools:text="212132121223"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_three_color"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:text="@string/fast"
                    />
            </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/gaoji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <EditText
                        android:id="@+id/gasprice"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="55dp"
                        android:textColor="@color/default_hint_text_color"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:hint="@string/gaoji_gasprice"
                        android:gravity="center_vertical"
                        android:background="@null"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_hint_text_color"
                        android:textSize="14sp"
                        android:text="gwei"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />
                <EditText
                    android:id="@+id/gas"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textColor="@color/default_hint_text_color"
                    android:textSize="14sp"
                    android:inputType="numberDecimal"
                    android:hint="@string/gaoji_gas"
                    android:gravity="center_vertical"
                    android:background="@null"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/lin_huise_bg2"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/default_hint_text_color"
                    android:textSize="14sp"
                    android:hint="@string/gaoji_16"
                    android:layout_height="90dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shecan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_color_stress_two"
                    android:textSize="14sp"
                    android:text="@string/shezhicanshu"
                    android:visibility="gone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_hint_text_color"
                    android:layout_toLeftOf="@+id/gaoji_open"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textSize="14sp"
                    android:text="@string/gaojixuanxiang"
                    />
                <CheckBox
                    android:id="@+id/gaoji_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/gaoji_checkbox"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@drawable/lin_blue_bg_wallet"
                android:textColor="@color/default_button_text_color"
                android:textSize="@dimen/dp_14"
                android:text="@string/next_step"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>