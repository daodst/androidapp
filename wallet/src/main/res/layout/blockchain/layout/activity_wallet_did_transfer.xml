<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/default_top_background_color">

        <ImageView
            android:id="@+id/did_transfer_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:src="@drawable/did_top_bar_left_black"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/did_transfer_title"
            android:textColor="#ff111111"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/did_transfer_scan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:src="@drawable/did_top_bar_scan"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/default_top_background_color"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:text="@string/did_transfer_address_ed_tips"
        android:textColor="#ff111111"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/default_top_background_color">

        <EditText
            android:id="@+id/did_transfer_address_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="46dp"
            android:hint="@string/did_transfer_address_ed_hint"
            android:textColor="#ff999999"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/did_transfer_address_book"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:src="@drawable/did_transfer_address_ico"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/default_top_background_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="@string/did_transfer_did_tips"
        android:textColor="#ff111111"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/did_transfer_did"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/default_top_background_color"
        android:gravity="center_vertical"
        android:hint="@string/did_transfer_did_hint"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:textColor="#ff111111"
        android:textSize="15sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/default_top_background_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="@string/did_transfer_remark_tips"
        android:textColor="#ff111111"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/did_transfer_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/default_top_background_color"
        android:gravity="center_vertical"
        android:hint="@string/did_transfer_remark_hint"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:textColor="#ff111111"
        android:textSize="15sp" />

    <Button
        android:id="@+id/did_transfer_bt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/did_transfer_bt_bg"
        android:text="@string/did_transfer_bt"
        android:textColor="#ffffffff"
        android:textSize="16sp" />
</LinearLayout>
