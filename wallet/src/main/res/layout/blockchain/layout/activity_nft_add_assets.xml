<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical">

    <com.wallet.ctc.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="@string/nft_add_personal_nft" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/nft_add_hint"
                android:textColor="@color/default_text_three_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rect_card_white"
                android:gravity="start"
                android:hint="@string/nft_contract_input_hint"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="12dp"
                android:paddingTop="15dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15dp"
                android:textColor="@color/default_text_color"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/sky_button"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            android:text="@string/confirm" />

    </RelativeLayout>
</LinearLayout>
