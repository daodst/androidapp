<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/default_top_background_color"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/coin_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black_2D3A5E"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/coin_num"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/dp_14"
                android:paddingRight="@dimen/dp_5"
                android:textColor="@color/black_333F61"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/coin_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_30"
                android:gravity="right"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/black_9197A9"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/coin_statu"
                android:layout_width="42dp"
                android:layout_height="@dimen/dimen_18dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                android:text="@string/processing"
                android:gravity="center"
                android:background="@drawable/lin_red_creattoken_statu_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/main_coin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/black_9197A9"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:textSize="11dp"
                android:textColor="@color/black_9197A9"
                android:text="@string/total_amount_of_coins"
                android:paddingRight="@dimen/dp_5"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_30"
                android:gravity="right"
                android:textSize="11dp"
                android:textColor="@color/black_9197A9"
                android:text="@string/currency_time"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="42dp"
                android:layout_height="@dimen/dimen_18dp"
                android:textColor="@color/black_9197A9"
                android:textSize="11dp"
                android:text="@string/status"
                android:gravity="center|right"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
