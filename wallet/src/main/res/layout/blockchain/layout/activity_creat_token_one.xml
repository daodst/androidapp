<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/buzhou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/chuangjian_one"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/default_text_three_color"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="@string/basic_information"
                    android:layout_below="@+id/buzhou"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/step_two"
                    />

                <TextView
                    android:id="@+id/step_two"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/create_token_sum"
                    android:textColor="@color/default_text_three_color"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/default_text_three_color"
                    android:text="@string/create_token_success"
                    android:layout_toRightOf="@+id/step_two"
                    android:layout_below="@+id/buzhou"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/textView" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:background="@color/default_top_background_color"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/token_name"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="55dp"
                    android:textSize="14sp"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_hint_text_color"
                    android:hint="@string/create_token_name"
                    android:maxLines="1"
                    android:maxLength="255"
                    android:paddingLeft="@dimen/dp_5"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />
                <EditText
                    android:id="@+id/token_suo"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="55dp"
                    android:textSize="14sp"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_hint_text_color"
                    android:hint="@string/create_token_suoxie"
                    android:maxLength="255"
                    android:paddingLeft="@dimen/dp_5"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />
                <EditText
                    android:id="@+id/guanwang"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="55dp"
                    android:textSize="14sp"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_hint_text_color"
                    android:hint="@string/create_token_guanwang"
                    android:paddingLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:maxLength="255"
                    android:gravity="center_vertical"
                    />
                <View
                    android:id="@+id/guanwang_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/token_logo_lin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingRight="@dimen/dp_20"
                android:background="@color/default_top_background_color"
                android:paddingLeft="@dimen/dp_25"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_three_color"
                    android:textSize="14sp"
                    android:text="@string/create_token_slogo"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <common.app.base.view.RoundImageView
                    android:id="@+id/token_img"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    />
                <TextView
                    android:id="@+id/choosed_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/please_choose"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:textColor="@color/default_text_three_color"
                    android:textSize="14sp"
                    android:drawableRight="@mipmap/right_go"
                    />
            </LinearLayout>
            <View
                android:id="@+id/token_logo_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/dp_20"
                />
            <LinearLayout
                android:id="@+id/diya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/default_top_background_color"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                >
                <LinearLayout
                    android:id="@+id/putongfabi"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@color/default_top_background_color"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/create_token_putong"
                        />
                    <CheckBox
                        android:id="@+id/check"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="false"
                        style="@style/MyCheckboxStyle"
                        android:background="@drawable/protocol_checkbox"
                        android:checked="true"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />
                <LinearLayout
                    android:id="@+id/diyafabi"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@color/default_top_background_color"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/default_text_three_color"
                        android:text="@string/create_token_diya"
                        />
                    <CheckBox
                        android:id="@+id/check2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="false"
                        style="@style/MyCheckboxStyle"
                        android:background="@drawable/protocol_checkbox"
                        android:checked="false"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_dividing_line"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tishi"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="@string/create_token_tishi"
                android:textSize="@dimen/size_12"
                android:textColor="#00AD08"
                />

            <TextView
                android:id="@+id/next_step"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/lin_blue_bg_wallet"
                android:textColor="@color/default_button_text_color"
                android:text="@string/next_step"
                android:textSize="18sp"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
