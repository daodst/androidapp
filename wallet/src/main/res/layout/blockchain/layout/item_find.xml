<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        >
        <TextView
            android:id="@+id/find_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16dp"
            android:layout_marginRight="29dp"
            android:layout_toLeftOf="@+id/find_logo"
            android:textColor="@color/default_text_color"

            />

        <common.app.base.view.RoundImageView
            android:id="@+id/find_logo"
            android:layout_width="124dp"
            android:layout_height="75dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:type="round"
            app:borderRadius="5dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/qr_bg"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/find_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/find_logo"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/default_hint_text_color"
            />
        <TextView
            android:id="@+id/find_look"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_below="@+id/find_time"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/default_hint_text_color"
            android:drawablePadding="@dimen/dp_5"
            />
        <LinearLayout
            android:id="@+id/dianzan_lin"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/find_look"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_below="@+id/find_time"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dianzan"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:scaleType="centerInside"
                android:src="@mipmap/wallet_find_nogood" />
            <TextView
                android:id="@+id/zan_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="11"
                android:paddingRight="@dimen/dp_12"
                android:textColor="@color/default_text_three_color"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
