<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_top_background_color"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_22">


    <common.app.my.view.CircularImage
        android:id="@+id/avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/dp_12"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="#647BAC"
                android:textSize="@dimen/dp_14" />

            <ImageView
                android:id="@+id/dianzan"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:scaleType="centerInside"
                android:src="@mipmap/wallet_find_nogood" />
            <TextView
                android:id="@+id/zan_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="11"
                android:paddingRight="@dimen/dp_12"
                android:textColor="@color/default_text_three_color"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>
        <TextView
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/dimen_15sp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/w_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_three_color"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/command_reply"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:paddingRight="@dimen/dp_10"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text=""
                android:textColor="@color/default_text_two_color"
                android:textSize="11sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/command_del"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/default_text_three_color"
                android:paddingRight="@dimen/dimens_11dp"
                android:textSize="@dimen/dp_12" />


        </LinearLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            android:background="@color/default_top_background_color"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_17"
            />
        <View
            android:id="@+id/xian_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_17"
            />
    </LinearLayout>
</LinearLayout>
