<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/round_top_c10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <common.app.my.view.CircularImage
            android:id="@+id/assets_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/zhujici_logo"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/assets_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/default_text_two_color"
                android:text="ETH"
                />
            <TextView
                android:id="@+id/assets_conten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/default_hint_text_color"
                android:text="Ethereum Foundation"
                />
            <TextView
                android:id="@+id/assets_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:textColor="@color/default_hint_text_color"
                tools:visibility="visible"
                tools:text="30xdfsdt...y5fhrt1g"
                />
        </LinearLayout>
        <CheckBox
            android:id="@+id/assets_choose"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/add_assets_checkbox"
            android:button="@null"
            android:layout_height="27dp" />
    </LinearLayout>
</LinearLayout>
