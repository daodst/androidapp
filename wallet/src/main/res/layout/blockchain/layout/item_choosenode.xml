<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="@dimen/dp_10"
        android:background="@drawable/lin_write_bg2"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/node_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            tools:text="——"
            android:textColor="@color/default_text_two_color"
            />
        <TextView
            android:id="@+id/node_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gossip "
            android:textColor="@color/default_hint_text_color"
            android:textSize="@dimen/dp_12"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/node_sudu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="1000ms"
                android:textSize="12sp"
                android:textColor="#2A67CD"
                />
            <ImageView
                android:id="@+id/node_k"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:src="@mipmap/node_di"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>