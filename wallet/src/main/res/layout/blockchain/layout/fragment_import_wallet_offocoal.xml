<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/default_top_background_color"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="@string/content_edit_tips"
            android:textStyle="bold"
            android:textColor="@color/default_text_color"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/content_edit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_f5_c8"
            android:gravity="top|left"
            android:hint="@string/official_wallet_remind"
            android:padding="@dimen/dp_10"
            android:textColor="@color/default_text_color"
            android:textColorHint="@color/default_hint_text_color"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="@string/official_wallet_password"
            android:textStyle="bold"
            android:textColor="@color/default_text_color"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/official_wallet_password"
                android:inputType="textPassword"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="@string/wallet_name"
            android:textStyle="bold"
            android:textColor="@color/default_text_color"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/wallet_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_input_wallet_name"
                android:textColor="@color/black"
                android:textColorHint="@color/default_hint_text_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingRight="@dimen/dp_15">

            <CheckBox
                android:id="@+id/check"
                style="@style/MyCheckboxStyle"
                android:background="@drawable/protocol_checkbox"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/im_agree"
                android:textColor="@color/default_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/look_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/protocol"
                android:textColor="@color/default_theme_color"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            style="@style/common_button"
            android:id="@+id/import_wallet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/import_begin"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/what_is_mnemonic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:gravity="center"
            android:text="@string/what_is_official_wallet"
            android:textColor="@color/default_theme_color"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
