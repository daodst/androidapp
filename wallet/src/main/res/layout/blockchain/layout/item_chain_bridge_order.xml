<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/round_top_c10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_toLeftOf="@id/coinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/fromNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3000.0256"
                    android:textColor="#ff0bbd8b"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/fromCoinTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="USDT"
                    android:textColor="#ff0bbd8b"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coinLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/fromCoinIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:src="@mipmap/tt_logo"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/ico_double_arrow_rigth_yellow"/>
                <ImageView
                    android:id="@+id/toCoinIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    tools:src="@mipmap/bnb_logo"/>
            </LinearLayout>


            <LinearLayout
                android:layout_toRightOf="@id/coinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/toNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2980.0256"
                    android:textColor="#ff0bbd8b"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/toCoinTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="USDT"
                    android:textColor="#ff0bbd8b"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_dividing_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/chain_bridage_status"
                android:textColor="@color/default_hint_text_color"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/statusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=""
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/default_text_color"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chain_bridage_time"
                android:layout_centerVertical="true"
                android:textColor="@color/default_hint_text_color"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2023-11-16 16:30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/default_text_color"
                android:textSize="12sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/errorLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:background="#FFF2E5">
            <TextView
                android:id="@+id/alertTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/optBtn"
                android:drawablePadding="3dp"
                android:paddingLeft="5dp"
                android:drawableLeft="@mipmap/ico_yellow_alert"
                tools:text="，。"
                android:textColor="#ffff7f00"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/optBtn"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center"
                android:text="@string/chain_bridge_continue_btn"
                android:background="@drawable/round_ff7f_c11"
                android:textColor="#ffff7f00"
                android:textSize="12sp"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
