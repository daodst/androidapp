<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        >
        <ListView
            android:id="@+id/wallet_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:paddingTop="@dimen/dp_10"
            android:dividerHeight="10dp"
            android:divider="@null"
            >

        </ListView>
        <LinearLayout
            android:id="@+id/nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nodata"
                android:textColor="@color/default_text_three_color"
                android:drawableTop="@mipmap/nodata"
                android:textSize="14sp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chuanjian_daoru"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="44dp">
        <LinearLayout
            android:id="@+id/create_wallet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/zhuanzhang_bg"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/create_wallet"
                android:drawableLeft="@mipmap/wallet_whrit"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_5"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/import_wallet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/shoukuan_bg"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/import_wallet"
                android:drawableLeft="@mipmap/daoru"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_5"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>