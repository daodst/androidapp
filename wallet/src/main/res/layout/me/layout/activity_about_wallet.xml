<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_top_background_color"
    android:orientation="vertical">
    <include layout="@layout/title_bar" />
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_60"
		android:id="@+id/menu_body"
		android:layout_marginTop="@dimen/dp_25"
		android:scaleType="centerInside"
		android:src="@mipmap/ic_launcher"
		/>
	<TextView
		android:id="@+id/current_version2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="@color/default_text_three_color"
		android:textSize="12sp"
		android:text="1.0.0"
		android:layout_marginTop="@dimen/dp_5"
		/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/dp_25"
		android:paddingRight="@dimen/dp_25"
		android:gravity="center|left"
		android:textColor="@color/default_text_three_color"
		android:textSize="13sp"
		android:text="@string/about_remain"
		android:layout_marginTop="15dp"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/dp_25"
		android:paddingRight="@dimen/dp_25"
		android:orientation="vertical"
		>
		<TextView
			android:id="@+id/use_agreement2"
			android:layout_width="match_parent"
			android:layout_height="55dp"
			android:drawableRight="@mipmap/right_go"
			android:textColor="@color/default_text_color"
			android:textSize="14sp"
			android:text="@string/use_agreement"
			android:gravity="center_vertical"
			/>
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/default_dividing_line"
			/>
		<TextView
			android:id="@+id/privacy_policy2"
			android:layout_width="match_parent"
			android:layout_height="55dp"
			android:drawableRight="@mipmap/right_go"
			android:textColor="@color/default_text_color"
			android:textSize="14sp"
			android:text="@string/privacy_policy"
			android:gravity="center_vertical"
			/>
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/default_dividing_line"
			/>
		<TextView
			android:id="@+id/version_log2"
			android:layout_width="match_parent"
			android:layout_height="55dp"
			android:drawableRight="@mipmap/right_go"
			android:textColor="@color/default_text_color"
			android:textSize="14sp"
			android:text="@string/version_log"
			android:gravity="center_vertical"
			/>
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/default_dividing_line"
			android:visibility="gone"
			/>
		<TextView
			android:id="@+id/product_guide2"
			android:layout_width="match_parent"
			android:visibility="gone"
			android:layout_height="55dp"
			android:drawableRight="@mipmap/right_go"
			android:textColor="@color/default_text_color"
			android:textSize="14sp"
			android:text="@string/product_guide"
			android:gravity="center_vertical"
			/>
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/default_dividing_line"
			/>
		<TextView
			android:id="@+id/new_version2"
			android:layout_width="match_parent"
			android:layout_height="55dp"
			android:drawableRight="@mipmap/right_go"
			android:textColor="@color/default_text_color"
			android:textSize="14sp"
			android:text="@string/new_version"
			android:gravity="center_vertical"
			/>
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/default_dividing_line"
			/>
	</LinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center|bottom"
		android:paddingBottom="@dimen/dp_10"
		android:textSize="@dimen/dp_12"
		android:textColor="@color/default_text_color"
		/>
</LinearLayout>
