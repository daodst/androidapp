<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="45.5dip"
    android:background="@color/default_titlebar_bg_color"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="53dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:drawablePadding="7dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textColor="@color/default_text_two_color"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:hint="@string/seach_token"
        android:drawableLeft="@mipmap/seach"
        android:textColorHint="@color/default_hint_text_color"
        android:textSize="14sp"
        android:background="@drawable/lin_e7e7e7_bg"
        />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/default_text_color_stress_two"
        android:textSize="14sp"
        android:text="@string/cancel"
        android:layout_alignParentRight="true"
        />
    <View
        android:id="@+id/div_view"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/default_dividing_line"
        android:layout_height="0.5dp"/>
</RelativeLayout>