<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_titlebar_bg_color"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:drawableLeft="@mipmap/sm_virtual_icon_back"
        android:gravity="center_vertical|left"
        android:minWidth="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/default_titlebar_left_color"
        android:textSize="@dimen/sizedefault" />

    <TextView
        android:id="@+id/left_tv"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_back"
        android:paddingRight="10dp"
        android:visibility="gone"
        tools:drawableLeft="@drawable/circle_green_c10" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        tools:text="Title"
        android:textStyle="bold"
        android:textColor="@color/default_titlebar_title_color"
        android:textSize="@dimen/sizetitlebar" />

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/default_titlebar_right_color"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text=""
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/img_action"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:minWidth="@dimen/dp_45"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <View
        android:id="@+id/div_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_title"
        android:background="@color/default_titlebar_dividing_line_color" />
</RelativeLayout>
