<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/default_top_background_color"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/drop_out"
            android:textColor="@color/default_titlebar_title_color"
            android:textSize="17sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/close"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_dividing_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginTop="@dimen/dimen_38dp"
            android:src="@mipmap/out_identity"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/drop_out_identity"
            android:textColor="@color/default_text_color"
            android:textSize="17sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drop_out_identity_remark"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/default_text_three_color"
            android:paddingLeft="@dimen/dp_35"
            android:paddingRight="@dimen/dp_35"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_11dp"
            />
        <TextView
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/lin_red_f64a45_bg"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dimen_38dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:gravity="center"
            android:text="@string/drop_out_ok"
            />
    </LinearLayout>
</LinearLayout>
