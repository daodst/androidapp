<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/myalertdialog_bg"
    android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/screenshots_camer"
            android:layout_marginTop="38dp"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/default_text_color"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/please_do_not_screenshot"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:lineSpacingExtra="@dimen/dp_3"
        android:textColor="@color/default_text_three_color"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        tools:text="，。"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="34dp"
        android:background="@color/default_dividing_line"/>
    <TextView
        android:id="@+id/close_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/default_error_color"
        android:text="@string/got_it"
        android:textSize="15sp"
        />
</LinearLayout>
