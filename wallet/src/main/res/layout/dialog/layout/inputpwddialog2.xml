<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/material_dialog_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="17sp"
        android:textColor="@color/default_text_color"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="@string/place_edit_password"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="15sp"
        android:textColor="@color/default_tip_color"
        android:paddingLeft="10dp"
        android:text="@string/caveat"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/round_f6_c5"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:maxLength="50"
        android:paddingLeft="10dp"
        android:hint="@string/password_input_hint"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/default_dividing_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:textColor="@color/default_text_color"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/default_dividing_line"></View>
        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/default_theme_color"
            android:text="@string/confirm"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
