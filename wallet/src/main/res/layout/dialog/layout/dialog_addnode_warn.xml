<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/default_top_background_color"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/close"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/default_text_two_color"
            android:text="@string/add_custom_node"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_dividing_line"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/add_node_wran"
        android:scaleType="centerInside"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/custom_node"
        android:textSize="17sp"
        android:textColor="@color/default_text_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_node_warn"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/default_text_three_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >
        <TextView
            android:id="@+id/btn_sub"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/lin_blue_bg_wallet"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/default_button_text_color"
            android:text="@string/got_it"
            />
    </LinearLayout>
</LinearLayout>