<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/lin_write_15_bg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/url_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="7dp"
        android:textSize="12sp"
        android:textColor="@color/default_text_two_color"
        tools:text="xxxx.com"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="23dp"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dimen_20dp"
        >
        <TextView
            android:id="@+id/dapp_switch_wallet"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/dapp_wallets"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/default_text_color"
            android:text="@string/dapp_switch_wallets"
            />
        <TextView
            android:id="@+id/dapp_share"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:drawableTop="@mipmap/dapp_share"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/default_text_color"
            android:text="@string/share"
            />
        <TextView
            android:id="@+id/dapp_copy_url"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:drawableTop="@mipmap/dapp_copy_url"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/default_text_color"
            android:text="@string/copy_dapp_url"
            />
        <TextView
            android:id="@+id/dapp_open_web"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawableTop="@mipmap/dapp_open_web"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/default_text_color"
            android:visibility="gone"
            android:gravity="center"
            android:text=""
            />
        <TextView
            android:id="@+id/dapp_reflse"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawableTop="@mipmap/dapp_reflse"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/default_text_color"
            android:text="@string/shuaxin"
            />

        <TextView
            android:id="@+id/dapp_collect"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawableTop="@mipmap/dapp_collect"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/default_text_color"
            android:text="@string/dapp_collect"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/dapp_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:text="@string/cancel"
        android:gravity="center"
        android:background="@color/default_top_background_color"
        android:layout_margin="@dimen/dp_20"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/default_text_color"
        />
</LinearLayout>
