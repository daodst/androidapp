<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/updata_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingBottom="60dp"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="320dp"
            android:background="@mipmap/candy_dialog_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/candy_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lingqu_success"
                android:textColor="@color/default_stress_color"
                android:textSize="21dp"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/candy_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_three_color"
                android:textSize="12dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@+id/candy_success"
                />
            <LinearLayout
                android:id="@+id/candy_tochat"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="33dp"
                android:background="@drawable/lin_blue_bg5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/candy_dialog_chat"
                    android:text="@string/contact_official"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/default_stress_color"
                    android:textSize="12dp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/close_dialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/updata_dialog"
        android:src="@mipmap/diolog_close"
        />
    <LinearLayout
        android:id="@+id/close_userlogo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/diolog_close"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/lin_write_bg7"
        >
        <common.app.my.view.CircularImage
            android:id="@+id/img_head_logo"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@mipmap/token_detail"
            android:scaleType="centerCrop" />
    </LinearLayout>
</RelativeLayout>
