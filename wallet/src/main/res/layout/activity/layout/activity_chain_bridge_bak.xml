<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <common.app.ui.view.TitleBarView
        android:id="@+id/title_bar"
        app:titleText="@string/chain_bridge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@color/default_top_background_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="14dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <RelativeLayout
            android:id="@+id/item_multichain"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">
            <ImageView
                android:id="@+id/logo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ico_dapp_multichain"/>
            <TextView
                android:id="@+id/nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/logo1"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:text="Multichain"
                android:textColor="#ff111111"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="：USDT、BNB、ETH、TT、NXN"
                android:layout_below="@id/nametv"
                android:layout_alignLeft="@id/nametv"
                android:layout_marginTop="3dp"
                android:textColor="#ff999999"
                android:textSize="13sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/default_dividing_line"/>

        <RelativeLayout
            android:id="@+id/item_moonpay"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">
            <ImageView
                android:id="@+id/logo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ico_dapp_moonpay"/>
            <TextView
                android:id="@+id/nametv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/logo2"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:text="MoonPay"
                android:textColor="#ff111111"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="：USDT、TT"
                android:layout_below="@id/nametv2"
                android:layout_alignLeft="@id/nametv2"
                android:layout_marginTop="3dp"
                android:textColor="#ff999999"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/default_dividing_line"/>

        <RelativeLayout
            android:id="@+id/item_latamex"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">
            <ImageView
                android:id="@+id/logo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ico_dapp_latamex"/>
            <TextView
                android:id="@+id/nametv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/logo3"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:text="Latamex"
                android:textColor="#ff111111"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="：USDT"
                android:layout_below="@id/nametv3"
                android:layout_alignLeft="@id/nametv3"
                android:layout_marginTop="3dp"
                android:textColor="#ff999999"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/default_dividing_line"/>
    </LinearLayout>
</LinearLayout>
