<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <common.app.ui.view.TitleBarView
        android:id="@+id/title_bar"
        app:titleText="@string/chain_bridge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/fromAddrTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_send_address"
                android:textColor="@color/default_text_color"
                android:textStyle="bold"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/fromAddrTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/fromAddrTitle"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:hint="@string/map_send_addr_hint"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                tools:text="dst1lpgt59cggkskm8c0v5c2dzazhy8837y3rzqsew"
                android:textColor="@color/default_text_color"
                android:background="@drawable/round_top_c10"
                android:textSize="13sp"
                />

            <RelativeLayout
                android:id="@+id/from_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fromAddrTv"
                android:layout_marginTop="12dp"
                android:paddingLeft="14dp"
                android:paddingTop="20dp"
                android:paddingRight="14dp"
                android:paddingBottom="10dp"
                android:background="@drawable/round_top_c10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/map_send_title"
                    android:textColor="@color/default_text_color"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    />
                <LinearLayout
                    android:id="@+id/balanceLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/map_yue_title"
                        android:textColor="@color/default_text_three_color"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/balanceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="643.85"
                        android:textColor="@color/default_theme_color"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/mapNumEdit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/balanceLayout"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/chain_yingshe_count_hint"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/default_hint_text_color"
                    android:textColor="@color/default_text_color"
                    android:textSize="18sp"
                    />

                <View android:id="@+id/numEditLine"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/mapNumEdit"
                    android:background="@color/default_dividing_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/numEditLine"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/fromCoinSpinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/spinner_f6_c5_bg"/>

                    <Spinner
                        android:id="@+id/fromChainSpinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/spinner_f6_c5_bg"/>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/toLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/from_layout"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="20dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_top_c10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/map_to_title"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/receiveNumTv"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/balanceLayout"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:hint="- -"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/default_hint_text_color"
                        android:textColor="@color/default_text_color"
                        android:textSize="18sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/mapNumEdit"
                        android:background="@color/default_dividing_line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/numEditLine"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/round_f6_c5"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/toCoinImg"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                tools:src="@mipmap/usdt_logo"/>
                            <TextView
                                android:id="@+id/toCoinNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                tools:text="USDT"
                                android:textStyle="bold"
                                android:textColor="@color/default_text_two_color"
                                android:textSize="16sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="15dp"
                            android:paddingRight="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/round_f6_c5"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/toChainImg"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                tools:src="@mipmap/tt_logo"/>
                            <TextView
                                android:id="@+id/toChainTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                tools:text="DST CHAIN"
                                android:textStyle="bold"
                                android:textColor="@color/default_text_two_color"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chain_yingshe_address"
                        android:textSize="14sp"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/map_receive_addr_tip"
                        android:textSize="12sp"
                        android:textColor="@color/default_tip_color" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_top_c10">
                    <EditText
                        android:id="@+id/mapAddressEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/select_address_img"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_14dp"
                        android:gravity="center_vertical"
                        android:hint="@string/chian_yingshe_address_hint"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColorHint="@color/default_hint_text_color"
                        android:textColor="@color/default_text_color"
                        android:background="@null"/>

                    <ImageView
                        android:id="@+id/select_address_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:src="@mipmap/address_more_icon"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/mapAlertTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/map_gas_tip"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/default_theme_color"
                    android:textSize="12sp"
                    />

                <Button
                    android:id="@+id/confirmBtn"
                    style="@style/common_button"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/confirm"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/changeMapIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/from_layout"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/bql_map"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
