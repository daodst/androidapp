<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <common.app.ui.view.TitleBarView
        android:id="@+id/title_bar"
        app:titleText=""
        app:backgroundcolor="@color/transparent"
        app:hideDivider="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/statusIv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ico_chain_bridge_status_ok"/>

            <TextView
                android:id="@+id/statusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                tools:text=""
                android:textStyle="bold"
                android:textColor="@color/default_theme_color"
                android:textSize="16sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/round_top_c10">
                <LinearLayout
                    android:layout_toLeftOf="@id/coinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/fromCoinTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="USDT-BSC"
                        android:textColor="#738C99"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/fromNumTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3000"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/coinLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">
                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp">
                        <ImageView
                            android:id="@+id/fromCoinIv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:src="@mipmap/tt_logo"/>
                        <ImageView
                            android:id="@+id/fromAssetCoinIv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            tools:src="@mipmap/usdt_logo"/>
                    </RelativeLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:src="@mipmap/ico_double_arrow"/>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp">
                        <ImageView
                            android:id="@+id/toCoinIv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:src="@mipmap/bnb_logo"/>
                        <ImageView
                            android:id="@+id/toAssetCoinIv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            tools:src="@mipmap/usdt_logo"/>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_toRightOf="@id/coinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/toCoinTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="USDT-DST"
                        android:textColor="#738C99"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/toNumTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2985.65"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                tools:text="216"
                android:textColor="#ff738c99"
                android:textSize="15sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_chain_bridge_timeline"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
