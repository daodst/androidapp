<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/usdt_realize_bg"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/usdt_realize_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/usdt_realize_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/usdt_realize_back" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/usdt_realize_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usdt_realize_one_bg"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="@dimen/dp_50"
            android:paddingRight="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usdt_realize_one_title"
                android:textColor="#ffff6c00"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/usdt_realize_one_content_parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="120dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="3dp"
                        android:lineSpacingMultiplier="1.1"
                        android:text="@string/usdt_realize_one_content"
                        android:textColor="#ff666666"
                        android:textSize="13sp"
                        tools:text="1\n" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="@string/usdt_realize_one_balance_title"
                        android:textColor="#ff111111"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/usdt_realize_one" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_11dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/usdt_content_bg"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="13dp">

                <TextView
                    android:id="@+id/usdt_realize_one_dst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff111111"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="DST: 100" />

                <TextView
                    android:id="@+id/usdt_realize_one_eth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#ff111111"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="DST: 100" />

                <TextView
                    android:id="@+id/usdt_realize_one_usdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#ff111111"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="USDT(DST): 0.01" />
            </LinearLayout>

            <Button
                android:id="@+id/usdt_realize_one_bt"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/usdt_realize_bt_bg"
                android:text="@string/usdt_realize_one_bt"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/usdt_realize_two_bg"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="@dimen/dp_50"
            android:paddingRight="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usdt_realize_two_title"
                        android:textColor="#ffff6c00"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="3dp"
                        android:lineSpacingMultiplier="1.2"
                        android:text="@string/usdt_realize_two_content"
                        android:textColor="#ff666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/usdt_realize_two_address"
                        android:textColor="#ff666666"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://app.tether.to/app/login"
                        android:textColor="#14BF9D"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/usdt_realize_two" />
            </LinearLayout>

            <Button
                android:id="@+id/usdt_realize_two_bt"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/usdt_realize_bt_bg"
                android:text="@string/usdt_realize_two_bt"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@drawable/usdt_realize_three_bg"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="@dimen/dp_50"
            android:paddingRight="28dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usdt_realize_three_title"
                        android:textColor="#ffff6c00"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="3dp"
                        android:lineSpacingMultiplier="1.2"
                        android:text="@string/usdt_realize_three_content"
                        android:textColor="#ff666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/usdt_realize_three_address"
                        android:textColor="#ff666666"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://app.tether.to/app/deposit"
                        android:textColor="#14BF9D"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/usdt_realize_three" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/usdt_realize_three_balance"
                android:textColor="#ff111111"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_11dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/usdt_content_bg"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="13dp">


                <TextView
                    android:id="@+id/usdt_realize_three_eth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ETH: 100"
                    android:textColor="#ff111111"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usdt_realize_three_usdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text="USDT(ETH): 0.01"
                    android:textColor="#ff111111"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/usdt_realize_three_bt"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/usdt_realize_bt_bg"
                android:text="@string/usdt_realize_three_bt"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
