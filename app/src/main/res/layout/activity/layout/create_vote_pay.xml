<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:text="@string/vote_pay_receive_addr_title"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <EditText
        android:id="@+id/pay_receive_addr_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/round_f6f7_c10"
        android:hint="@string/vote_pay_receive_addr_hint"
        android:textColorHint="@color/default_hint_text_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/default_text_color"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:text="@string/vote_pay_num_title"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_f6f7_c10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/pay_num_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@null"
            android:hint="@string/vote_pay_num_hint"
            android:inputType="numberDecimal"
            android:textColorHint="@color/default_hint_text_color"
            android:textColor="@color/default_text_color"
            android:textSize="15sp"
            />
        <Spinner
            android:id="@+id/pay_coin_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:entries="@array/mcc_coins"
            android:paddingRight="30dp"
            android:background="@drawable/spinner_bg2"/>
    </RelativeLayout>
</LinearLayout>
