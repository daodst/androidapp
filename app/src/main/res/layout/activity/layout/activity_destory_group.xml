<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/destory_back_top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/computing_top_bg" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/destory_back_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/destory_back_top_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/destory_back_top"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/destory_back"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dp_15"
                            android:src="@mipmap/sm_virtual_icon_back"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/destory_coin_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/default_text_color"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:text="DST" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="@string/destory_title"
                                android:textColor="@color/default_text_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/dst_destory_logo"
                        android:layout_width="86dp"
                        android:layout_height="83dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/dst_destory_logo" />

                </FrameLayout>

                <TextView
                    android:id="@+id/dst_destory_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="-20dp"
                    android:textColor="#ff111111"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:text="DST，\nDVM" />

                <!--            tools:text=" 100DST 。"-->
                <TextView
                    android:id="@+id/dst_destory_tips2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/destory_top_shape_bg"
                    android:paddingLeft="10dp"
                    android:paddingTop="@dimen/dst_destory_tips2_padding_top"
                    android:paddingRight="@dimen/dst_destory_tips2_padding_right"
                    android:paddingBottom="@dimen/dst_destory_tips2_padding_bottom"
                    android:textColor="#fffefefe"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Purchase DVM virtual machines with an annualized profit of approximately 300%" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dst_destory_tips3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dst_destory_group_tips3"
                    android:textColor="#ff111111"
                    android:textSize="17sp"
                    android:textStyle="italic|bold" />
                <TextView
                    android:id="@+id/dst_destory_tips4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/dst_destory_group_tips3"
                    android:textColor="#ff111111"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/priceTitleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/price"
                    android:textColor="#ff14bf9d"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dst_destory_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#ffff9900"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="-- DST/USDT" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/dst_destory_exchange"
                    android:textColor="#ff14bf9d"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dst_destory_exchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#ffff9900"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="--" />

                <TextView
                    android:id="@+id/dst_destory_address_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/dst_destory_address"
                    android:textColor="#ff14bf9d"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dst_destory_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="#ff111111"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="--" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dst_destory_wallet_logo" />

                    <TextView
                        android:id="@+id/dst_destory_wallet_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ff111111"
                        android:textSize="15sp"
                        tools:text="DST" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dst_destory_wallet_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="#ffff9900"
                    android:textSize="16sp"
                    tools:text="dex8dr52v39sfgdgh2f9s41gr211s2f5e61gh2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/dst_destory_tab1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:checked="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:background="@mipmap/icon_group_info_tab_s1">
                    <TextView
                        android:id="@+id/coinBalancetTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/group_coin_balance_title"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/balanceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="- -"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dst_destory_tab2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="-10dp"
                    android:checked="false"
                    android:focusable="true"
                    android:background="@mipmap/icon_group_info_tab_d2">
                    <TextView
                        android:id="@+id/freezeTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dst_freeze_num_title"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/freezeNumTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="--"
                        android:textColor="@color/default_text_color"
                        android:textSize="18sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="#F4F4F4"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:padding="5dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/destoryNumTitleTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/destory_num_hint_title"
                        android:textColor="#ff111111"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/dst_destory_get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="@string/computing_pledge_bt_tips"
                        android:textColor="#ff1181df"
                        android:textSize="14sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="18dp">
                    <EditText
                        android:id="@+id/dst_destory_num"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/computing_item_bg"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:textColorHint="#CCCCCC"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:paddingRight="100dp"
                        android:hint="@string/destory_num_input_hint" />
                    <TextView
                        android:id="@+id/payCoinTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        tools:text="DST"
                        android:textColor="#ffff9900"
                        android:textSize="14sp"
                        />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_gas_power_title"
                    android:textColor="#ff111111"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dst_destory_hash_get"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/computing_item_bg"
                    android:gravity="center_vertical"
                    android:hint="0"
                    android:paddingLeft="10dp"
                    android:textColorHint="#CCCCCC"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_gas_addr_title"
                    android:textColor="#ff111111"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/computing_item_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dst_destory_hash_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="#ffff9900"
                        android:background="@null"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="dex8dr52v39sfgdgh2f9s41gr211s2f5e61gh2" />

                    <ImageView
                        android:id="@+id/dst_destory_hash_address_select"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/dst_destory_wallet_select" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:text="@string/dst_destory_tips_buttom"
                android:textColor="#ff666666"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/dst_destory_tips_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:textColor="#ff666666"
                android:lineSpacingExtra="1dp"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:text="@string/destory_dst_tips_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="35dp"
                android:background="#E6E6E6" />

            <TextView
                android:id="@+id/dst_destory_num_pledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="#ff111111"
                android:textSize="14sp"
                tools:text=": 100 DST" />

            <Button
                android:id="@+id/dst_destory_bt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/computing_bt_bg"
                android:text="@string/dst_destory_bt_tips2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>
