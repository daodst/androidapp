<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <common.app.ui.view.TitleBarView
        android:id="@+id/upgrade_type1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hideDivider="true"
        app:titleText="@string/upgrade_title" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F7FB"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="@string/upgrade_type1_title_tips"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_top_c5"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="9dp"
                android:paddingBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/upgrade_type1_name_tips"
                    android:textColor="@color/default_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E6E6E6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upgrade_type1_version"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/upgrade_type1_version"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_pay_vote_step2_ed"
                    android:hint="@string/upgrade_type1_version_hint"
                    android:inputType="numberDecimal"
                    android:paddingLeft="12dp"
                    android:textColor="#111111"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upgrade_type1_url"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/upgrade_type1_url"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_pay_vote_step2_ed"
                    android:hint="@string/upgrade_type1_url_hint"
                    android:paddingLeft="12dp"
                    android:textColor="#111111"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upgrade_type1_size"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/upgrade_type1_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_pay_vote_step2_ed"
                    android:hint="@string/upgrade_type1_size_hint"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:textColor="#111111"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upgrade_type1_hight"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/upgrade_type1_hight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_pay_vote_step2_ed"
                    android:hint="@string/upgrade_type1_hight_hint"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:textColor="#111111"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upgrade_type1_name"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/upgrade_type1_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_pay_vote_step2_ed"
                    android:hint="@string/upgrade_type1_name_hint"
                    android:paddingLeft="12dp"
                    android:textColor="#111111"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upgrade_type1_sha512_tips"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/upgrade_type1_sha512"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_pay_vote_step2_ed"
                    android:hint="@string/upgrade_type1_sha512_hint"
                    android:paddingLeft="12dp"
                    android:textColor="#111111"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/upgrade_type1_bt"
            style="@style/common_button"
            android:text="@string/pay_vote_bt_tips" />
    </LinearLayout>
</LinearLayout>
