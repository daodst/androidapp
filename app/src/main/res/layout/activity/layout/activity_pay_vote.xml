<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <common.app.ui.view.TitleBarView
        android:id="@+id/pay_vote_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hideDivider="true"
        app:titleText="@string/pay_vote_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F7FB"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/pay_vote_tips"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/pay_vote_dst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_top_c5"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="18dp"
            android:paddingRight="9dp"
            android:paddingBottom="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_vote_dst_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="DST" />

                <TextView
                    android:id="@+id/pay_vote_dst_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text=" (7.9W)" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/pay_vote_right_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/pay_vote_dst_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#ff999999"
                android:textSize="14sp"
                tools:text="@string/pay_vote_dst_tips" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_vote_fm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_top_c5"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="18dp"
            android:paddingRight="9dp"
            android:paddingBottom="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_vote_fm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/default_token_name"
                    android:textColor="@color/default_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pay_vote_fm_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text=" (7.9W)" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/pay_vote_right_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/pay_vote_fm_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="@string/pay_vote_fm_tips"
                android:textColor="#ff999999"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
