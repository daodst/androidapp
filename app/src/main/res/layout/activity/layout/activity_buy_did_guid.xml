<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_top_background_color"
    tools:ignore="MissingDefaultResource">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/buy_did_top_bg"/>
    <RelativeLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/backs"/>
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/back_img"
            android:text="@string/buy_did_title"
            android:textStyle="bold"
            android:textColor="@color/default_titlebar_title_color"
            android:textSize="24sp"
            />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/buy_did_top_tip"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/buy_did_top_tip2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/req_dst_coin_title"
                        android:textStyle="bold"
                        android:textColor="@color/default_text_two_color"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/use_dst_get_did_title"
                        android:textStyle="bold"
                        android:textColor="@color/default_text_two_color"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/did_get_success_title"
                        android:textStyle="bold"
                        android:textColor="@color/default_text_two_color"
                        android:textSize="13sp"
                        />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="40dp">

                <ImageView
                    android:id="@+id/node1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:src="@drawable/buy_did_circle_node"/>

                <!--  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/node1"
                    android:layout_alignEnd="@id/node1"
                    android:layout_below="@id/node1"
                    android:layout_alignBottom="@id/item_layout4"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <View android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/default_theme_color"/>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/node1"
                    android:layout_marginLeft="15dp"
                    android:text="@string/how_get_dst_title"
                    android:textColor="#ff111111"
                    android:textSize="18sp"
                    />

                <!-- BNB/USDT -->
                <LinearLayout
                    android:id="@+id/item_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/node1"
                    android:layout_below="@id/node1"
                    android:layout_marginTop="15dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="13dp"
                    android:paddingStart="13dp"
                    android:background="@drawable/buy_did_item_bg1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/use_bnb_buy_did_title"
                        android:textColor="@color/default_theme_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/bnbSubTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/use_usdt_buy_did"
                        android:textColor="@color/default_text_three_color"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="@string/did_my_zichan_title"
                        android:textColor="#ff111111"
                        android:textSize="13sp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BNB："
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/bnbBalanceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- -"
                            android:textColor="@color/default_theme_color"
                            android:textSize="13sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USDT："
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/usdtBalanceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- -"
                            android:textColor="@color/pay_talk_tips_prohibit"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/needUsdtNumTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/- -"
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <ImageView
                            android:id="@+id/bnbAlertImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/buy_did_ico_alert"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/buyBnbBtn"
                        style="@style/common_button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="@string/buy_bnb_usdt_text"
                        />
                </LinearLayout>


                <!-- BNB/USDT -->
                <LinearLayout
                    android:id="@+id/item_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignLeft="@id/item_layout1"
                    android:layout_below="@id/item_layout1"
                    android:layout_marginTop="10dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="13dp"
                    android:paddingStart="13dp"
                    android:background="@drawable/buy_did_item_bg2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/direct_buy_dst_title"
                        android:textColor="@color/default_theme_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/use_usdt_buy_did_way_title"
                        android:textColor="@color/default_text_three_color"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/dstPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="@string/buy_dst_price_title"
                        android:textColor="#FF9800"
                        android:textSize="13sp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/has_get_dst_title"
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/dstBalanceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- -"
                            android:textColor="@color/pay_talk_tips_prohibit"
                            android:textSize="13sp"
                            />
                        <ImageView
                            android:id="@+id/dstAlertImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/buy_did_ico_alert"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/still_need_dst_title"
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/stillDstNumTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- -"
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buyDstBtn"
                        style="@style/common_button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="@string/buy_dst_text"
                        />
                </LinearLayout>


                <ImageView
                    android:id="@+id/node2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_layout2"
                    android:layout_marginTop="25dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/buy_did_circle_node"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/node2"
                    android:layout_alignTop="@id/node2"
                    android:layout_marginLeft="15dp"
                    android:text="@string/how_destory_dst_title"
                    android:textColor="#ff111111"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/destroyWayTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/node2"
                    android:paddingTop="3dp"
                    android:layout_alignParentRight="true"
                    android:text="@string/other_destroy_dst_title"
                    android:textColor="#ff0080ff"
                    android:textSize="13sp"
                    />


                <!-- DST -->
                <LinearLayout
                    android:id="@+id/item_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/node2"
                    android:layout_below="@id/node2"
                    android:layout_marginTop="15dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="13dp"
                    android:paddingStart="13dp"
                    android:background="@drawable/buy_did_item_bg3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/destroy_dst_coin_title"
                        android:textColor="@color/default_theme_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/needMinDstTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/need_min_dst_title"
                        android:textColor="@color/default_text_three_color"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text=""
                        android:textColor="#FF9800"
                        android:textSize="13sp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/has_destroy_title"
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/hasDestroyNumTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- -"
                            android:textColor="@color/default_theme_color"
                            android:textSize="13sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wait_destroy_num_title"
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/waitDestroyNumTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- -"
                            android:textColor="@color/pay_talk_tips_prohibit"
                            android:textSize="13sp"
                            />
                        <ImageView
                            android:id="@+id/destroyAlertImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/buy_did_ico_alert"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/destroyDstBtn"
                        style="@style/common_button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="@string/destroy_dst_text"
                        />
                </LinearLayout>



                <ImageView
                    android:id="@+id/node3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_layout3"
                    android:layout_marginTop="25dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/buy_did_circle_node"/>

                <!--  -->
                <!--
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/node3"
                    android:layout_alignRight="@id/node3"
                    android:layout_below="@id/node3"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <View android:layout_width="1dp"
                        android:layout_height="175dp"
                        android:background="@color/default_theme_color"/>
                </LinearLayout>
                -->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/node3"
                    android:layout_alignTop="@id/node3"
                    android:layout_marginLeft="15dp"
                    android:text="@string/suanli_wakuang_title"
                    android:textColor="#ff111111"
                    android:textSize="18sp"
                    />
                <!--  -->
                <LinearLayout
                    android:id="@+id/item_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/node3"
                    android:layout_below="@id/node3"
                    android:layout_marginTop="15dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="13dp"
                    android:paddingStart="13dp"
                    android:background="@drawable/buy_did_item_bg3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/suanli_wakuang_title"
                        android:textColor="@color/default_theme_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/auto_pledge_hash_title"
                        android:textColor="@color/default_text_three_color"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text=""
                        android:textColor="#FF9800"
                        android:textSize="13sp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/default_theme_color"
                            android:textSize="13sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff666666"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/pay_talk_tips_prohibit"
                            android:textSize="13sp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp"
                            android:paddingRight="5dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/suanliManagerBtn"
                        style="@style/common_button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="@string/suanli_manager_text"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
