<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="@string/hvote_detial_detial"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hvote_detial_id_tips"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hvote_detial_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#ff333333"
                android:textSize="13sp"
                tools:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hvote_detial_author_tips"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hvote_detial_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:ellipsize="middle"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textSize="13sp"
                tools:text="1000 FM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hvote_detial_balance_tips"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hvote_detial_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#0BBD8B"
                android:textSize="13sp"
                tools:text="20%" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hvote_detial_time_tips"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hvote_detial_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#ff333333"
                android:textSize="13sp"
                tools:text="20 FM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hvote_detial_type_tips"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hvote_detial_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#ff333333"
                android:textSize="13sp"
                tools:text="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hvote_detial_time_vote_tips"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hvote_detial_time_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#ff333333"
                android:textSize="13sp"
                tools:text="1000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="#E6E6E6" />

        <TextView
            android:id="@+id/hvote_detial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/hvote_detial_remark"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="#E6E6E6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hvote_detial_desc_tips"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/hvote_detial_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/vote_detial_header_desc_bg"
            android:lineSpacingMultiplier="1.1"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_13"
            android:paddingRight="@dimen/dp_18"
            android:paddingBottom="@dimen/dimen_19dp"
            android:textColor="#ff666666"
            android:textSize="12sp"
            tools:text="ã€‚" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="@string/hvote_detial_update_tips"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vote_detial_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/item_vote_detail_list" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="@string/hvote_detial_balance_list_tips"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vote_detial_cunkuan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/item_vote_detail_list" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="@string/vote_detial_vote_tips"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vote_detial_vote_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_13">

            <TextView
                android:id="@+id/vote_detial_vote1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/vote_detail_vote1"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                tools:text="38%" />

            <TextView
                android:id="@+id/vote_detial_vote2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/vote_detail_vote2"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                tools:text="27%" />

            <TextView
                android:id="@+id/vote_detial_vote3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/vote_detail_vote3"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                tools:text="20%" />

            <TextView
                android:id="@+id/vote_detial_vote4"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/vote_detail_vote4"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                tools:text="15%" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_18"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30">

            <View
                android:layout_width="26dp"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/vote_detail_0bbd8b_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/vote_detial_approve"
                android:textColor="#ff111111"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="26dp"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/vote_detail_ffb319_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/vote_detial_against"
                android:textColor="#ff111111"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="26dp"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/vote_detail_ff5500_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/vote_detial_disapprove"
                android:textColor="#ff111111"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="26dp"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/vote_detail_999999_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/vote_detial_give_up"
                android:textColor="#ff111111"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />
</LinearLayout>
