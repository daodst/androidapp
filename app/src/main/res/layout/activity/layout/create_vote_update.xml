<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:text="@string/vote_upgrade_title"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <EditText
        android:id="@+id/update_name_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/round_f6f7_c10"
        android:hint="@string/vote_upgrade_name_hint"
        android:textColorHint="@color/default_hint_text_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/default_text_color"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:text="@string/vote_upgrade_content"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <EditText
        android:id="@+id/update_info_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="left|top"
        android:padding="12dp"
        android:background="@drawable/round_f6f7_c10"
        android:hint="@string/vote_upgrade_content_hint"
        android:textColorHint="@color/default_hint_text_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/default_text_color"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:text="@string/vote_pay_height"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <EditText
        android:id="@+id/update_height_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/round_f6f7_c10"
        android:hint="@string/vote_pay_height_hint"
        android:textColorHint="@color/default_hint_text_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textColor="@color/default_text_color"
        android:textSize="15sp"
        />
</LinearLayout>
