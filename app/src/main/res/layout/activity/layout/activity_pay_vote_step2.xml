<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <common.app.ui.view.TitleBarView
        android:id="@+id/pay_vote2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hideDivider="true"
        app:titleText="@string/pay_vote_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F7FB"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/pay_vote2_tips"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_top_c5"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:paddingBottom="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_vote2_coin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="DST" />

                <TextView
                    android:id="@+id/pay_vote2_coin_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text=" (7.9W)" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E6E6E6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="@string/pay_vote2_num_tips"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/pay_vote2_num"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_pay_vote_step2_ed"
                android:hint="@string/pay_vote2_num_hint"
                android:inputType="numberDecimal"
                android:paddingLeft="12dp"
                android:textColor="#111111"
                android:textColorHint="#666666"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="@string/pay_vote2_address_tips"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/pay_vote2_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_pay_vote_step2_ed"
                android:hint="@string/pay_vote2_address_hint"
                android:paddingLeft="12dp"
                android:textColor="#111111"
                android:textColorHint="#666666"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/pay_vote2_bt"
            style="@style/common_button"
            android:text="@string/pay_vote_bt_tips" />
    </LinearLayout>
</LinearLayout>
