<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:paddingBottom="13dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:background="@drawable/round_top_c5">

        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/spaceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                tools:text="Mint > "
                android:textStyle="bold"
                android:textColor="@color/default_text_color"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/subSpaceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/spaceTv"
                tools:text="MintCoinName"
                android:textColor="#666666"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_down_black"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/editLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="vertical">
            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_dividing_line"/>
            <TextView
                android:id="@+id/subSpace2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                tools:text="MintCoinName"
                android:textColor="#ff333333"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/keyDescTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="DPOSFM，"
                android:textColor="#ff999999"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_f6f7_c4"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="12sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vote_params_now_value"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/vote_params_value_range"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
                <TextView
                    android:id="@+id/nowValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:textStyle="bold"
                    tools:text="13%"
                    android:textColor="#ff0bbd8b"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/valueDesc"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/nowValueTv"
                    android:textStyle="bold"
                    android:maxLines="2"
                    tools:text="1，1001，1001，100"
                    android:textColor="#ff0bbd8b"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tiaozheng_to"
                android:textColor="#ff333333"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/valueEdit"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@drawable/round_f6f7_c4"
                android:hint="@string/single_line_input"
                android:textColorHint="@color/default_hint_text_color"
                android:textColor="@color/default_text_color"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
