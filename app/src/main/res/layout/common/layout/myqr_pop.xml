<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/gouwuchebt_bg"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <View
            android:id="@+id/xianView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/default_dividing_line"></View>

        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/gouwuchebt_bg"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/selectbluebg_r"
            android:text="@string/cancel_btn"
            android:textColor="@color/default_button_text_color"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
