<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:background="@drawable/v_home_item_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/v_home_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dimen_27dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:textColor="#ff0bbd8b"
            android:textStyle="bold"
            tools:text="，...，...，..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_15">

            <TextView
                android:id="@+id/v_home_list_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2022/11/10 - 2022/11/12"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/v_home_list_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=""
                android:textColor="#ff0bbd8b"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="55dp"
        android:layout_height="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/v_home_item_label"
        android:gravity="center"
        android:text="@string/item_v_home_tips"
        android:paddingTop="4dp"
        android:textColor="#ffffffff"
        android:textSize="10sp" />
</FrameLayout>
