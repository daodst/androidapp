<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_12"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/item_vote_detial_update_moudle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff111111"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="：staking" />

    <TextView
        android:id="@+id/item_vote_detial_update_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="#ff999999"
        android:textSize="12sp"
        tools:text="：MaxEntriesMaxEntriesMaxEntries" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_vote_detial_update_value_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/item_vote_detial_update_value_tips"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_vote_detial_update_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0BBD8B"
            android:textSize="12sp"
            tools:text="100" />
    </LinearLayout>

    <View
        android:id="@+id/item_vote_detial_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#E6E6E6" />
</LinearLayout>
