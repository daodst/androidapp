<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/computing_back_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/computing_top_bg" />

        <FrameLayout
            android:id="@+id/computing_back_top"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/computing_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:src="@mipmap/sm_virtual_icon_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/computing_title"
                android:textColor="@color/default_text_color"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/computing_back_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/computing_top_label1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="29dp"
                    android:paddingRight="29dp"
                    android:textColor="#ff111111"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:text="1DST,\n10 Hash()" />

                <TextView
                    android:id="@+id/computing_top_label2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="29dp"
                    android:paddingRight="29dp"
                    android:textColor="#ff111111"
                    android:textSize="16sp"
                    android:textStyle="italic|bold"
                    tools:text=" 10 Hash（）\n14400  0.02DST." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="29dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dst_destory_wallet_logo" />

                <TextView
                    android:id="@+id/computing_wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ff111111"
                    android:textSize="15sp"
                    tools:text="DST" />
            </LinearLayout>

            <TextView
                android:id="@+id/computing_wallet_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="middle"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:singleLine="true"
                android:textColor="#ffff9900"
                android:textSize="16sp"
                tools:text="dex8dr52v39sdex8dr52v39sfgdgh2f9s41gr211s2f5e61gh2fgdgh2f9s41gr211s2f5e61gh2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="#F4F4F4"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/computing_pledge_hash_tips"
                    android:textColor="#ff111111"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/computing_item_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/computing_pledge_hash"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#ff14bf9d"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="5000 Hash" />

                    <TextView
                        android:id="@+id/computing_pledge_hash_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/computing_pledge_hash_bt_tips"
                        android:textColor="#ff111111"
                        android:textSize="13sp"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/computing_award_tips"
                    android:textColor="#ff111111"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/computing_item_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/computing_award"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textColor="#ffff9900"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="15.5 DST" />

                    <TextView
                        android:id="@+id/computing_award_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/computing_award_bt_tips"
                        android:textColor="#ff111111"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/computing_pledge_power"
                        android:textColor="#ff111111"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/computing_pledge_power_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff111111"
                        android:textSize="14sp"
                        tools:text="：0 Hash" />

                    <TextView
                        android:id="@+id/computing_pledge_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="@string/computing_pledge_bt_tips"
                        android:textColor="#ff1181df"
                        android:textSize="14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/computing_pledge_power"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/computing_item_bg"
                    android:gravity="center_vertical"
                    android:hint="@string/computing_pledge_power_hint"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:textColorHint="#CCCCCC"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:text="@string/dst_destory_tips_buttom"
                android:textColor="#ff666666"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/computing_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:textColor="#ff666666"
                android:textSize="14sp"
                tools:text="1、5，，。
            \n2、10，Hash。
            \n3、，。
            \n4、，。
            \n5、，。" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="35dp"
                android:background="#E6E6E6" />

            <TextView
                android:id="@+id/computing_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="#ff111111"
                android:textSize="14sp"
                tools:text=": 100 Hash" />

            <Button
                android:id="@+id/computing_bt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/computing_bt_bg"
                android:text="@string/computing_bt_tips"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>
