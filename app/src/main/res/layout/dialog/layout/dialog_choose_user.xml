<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="290dip"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rec_cor_light"
    android:paddingBottom="@dimen/dp_15"
    android:layout_gravity="center"
    >
    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/default_text_color"
        android:text=""
        />

   <LinearLayout
       android:id="@+id/one_user"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_60"
       android:orientation="horizontal"
       android:paddingLeft="@dimen/dp_15"
       android:paddingRight="@dimen/dp_15"
       android:gravity="center"
       >
        <common.app.my.view.CircularImage
            android:id="@+id/logind_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            />
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
            <TextView
                android:id="@+id/logined_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_color"
                />
           <TextView
               android:id="@+id/logined_phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/default_hint_text_color"
               android:textSize="@dimen/sp_12"
               />
       </LinearLayout>
       <ImageView
           android:layout_width="@dimen/dimen_40dp"
           android:layout_height="@dimen/dp_40"
           android:scaleType="centerInside"
           android:src="@mipmap/choose_user_choosed"
           />
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_dividing_line"
        android:layout_marginLeft="65dp"
        />
    <LinearLayout
        android:id="@+id/two_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center"
        >
        <common.app.my.view.CircularImage
            android:id="@+id/user_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_color"
                />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_hint_text_color"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dp_40"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@mipmap/choose_user_choosed"
            />
    </LinearLayout>
</LinearLayout>
