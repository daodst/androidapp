<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gainaward_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/gainaward_tips"
        android:textColor="#ff111111"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_27dp"
        android:text="@string/gainaward_wallet_tips"
        android:textColor="#ff111111"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gainaward_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dimen_27dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dimen_27dp"
        android:layout_marginBottom="@dimen/dp_18"
        android:background="@drawable/gainaward_ed_bg"
        android:ellipsize="middle"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_21"
        android:paddingRight="@dimen/dp_21"
        android:singleLine="true"
        tools:text="Fmd161f2c97l5gFmd161f2c97l5gvgfafxx6cc677vgfafxx6cc677vgfafxx6cc677vgfafxx6cc677"
        android:textColor="#ff666666"
        android:textSize="13sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:id="@+id/info_layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/gainaward_diss"
            style="@style/txt_titleStyle1"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/gainaward_diss"
            android:textColor="@color/default_text_color"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#E6E6E6" />

        <TextView
            android:id="@+id/gainaward_ok"
            style="@style/txt_titleStyle1"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/gainaward_ok"
            android:textColor="@color/default_button_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
