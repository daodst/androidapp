<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dp_300"
              android:layout_height="wrap_content"
              android:background="@drawable/material_dialog_bg"
              android:orientation="vertical">
    <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/default_text_color"
            android:gravity="center"
            android:textSize="18sp"
            android:paddingBottom="@dimen/dp_10"
            android:text="Material title"/>

        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="14dp">
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/default_text_three_color"
                android:gravity="center"
                android:textSize="15sp"
                android:text="message"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_dividing_line"/>

        <LinearLayout
            android:id="@+id/ll_bottom_layout"
            android:layout_width="match_parent"
            android:showDividers="middle"
            android:layout_height="50dp"
            >
            <Button
                android:id="@+id/negative_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:stateListAnimator="@null"
                android:textSize="15sp"
                android:textColor="@color/default_theme_color"
                android:text="@string/cancel"/>

            <Button
                android:visibility="gone"
                android:id="@+id/neutral_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:stateListAnimator="@null"
                android:textSize="15sp"
                android:textColor="@color/default_theme_color"
                android:text="@string/netural_btn_text"/>

            <Button
                android:id="@+id/positive_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:stateListAnimator="@null"
                android:textSize="15sp"
                android:textColor="@color/default_theme_color"
                android:text="@string/ok"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
