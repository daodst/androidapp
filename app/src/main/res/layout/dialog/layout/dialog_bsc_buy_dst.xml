<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="35dp"
    android:background="@drawable/round_top_half_c10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="@string/bnb_dst_buy_title"
        android:textColor="#ff000000"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/buy_dst_num_title"
        android:textColor="#ff111111"
        android:textSize="15sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:layout_height="44dp"
        android:background="@drawable/computing_item_bg">
        <EditText
            android:id="@+id/dstNumEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:textColorHint="#CCCCCC"
            android:textSize="15sp"
            android:background="@null"
            android:hint="@string/buy_dst_num_hint" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="DST"
            android:textColor="#ffff9900"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/select_pay_bsc_coin"
        android:textColor="#ff111111"
        android:textSize="15sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="44dp"
        android:background="@drawable/computing_item_bg">
        <Spinner
            android:id="@+id/coinSpinner"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:dropDownVerticalOffset="44dp"
            android:dropDownWidth="match_parent"
            android:entries="@array/bsc_coins"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/payNumTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/pay_bsc_num_tip"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/get_dst_addr_title"
        android:textColor="#ff111111"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/addrTv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/computing_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:hint="@string/get_dst_addr_hint"
        android:textColorHint="#CCCCCC"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/buy_dst_success_tip"
        android:textColor="#ffff9900"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancelBtn"
            style="@style/gray_button"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="@string/cancel"/>

        <View android:layout_width="15dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/buyBtn"
            style="@style/common_button"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="@string/now_buy_text"/>
    </LinearLayout>

</LinearLayout>
