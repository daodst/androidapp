<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gainaward_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/vote_detial_dialog_tips"
        android:textColor="#ff111111"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/vote_detial_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <CheckBox
                android:id="@+id/vote_detial_approve_ck"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:background="@drawable/vote_detial_ck"
                android:button="@null"
                android:focusable="false"
                android:clickable="false"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:text="@string/vote_detial_approve"
                android:textColor="#111111"
                android:textSize="@dimen/dimen_12dp" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/vote_detial_against"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:layout_marginRight="@dimen/dp_40"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <CheckBox
                android:id="@+id/vote_detial_against_ck"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:background="@drawable/vote_detial_ck"
                android:button="@null"
                android:focusable="false"
                android:clickable="false"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:text="@string/vote_detial_against"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_12dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/vote_detial_disapprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            android:padding="@dimen/dp_15">

            <CheckBox
                android:id="@+id/vote_detial_disapprove_ck"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:background="@drawable/vote_detial_ck"
                android:button="@null"
                android:focusable="false"
                android:clickable="false"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:text="@string/vote_detial_disapprove"
                android:textColor="#111111"
                android:textSize="@dimen/dimen_12dp" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/vote_detial_give_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_40"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            android:padding="@dimen/dp_15">

            <CheckBox
                android:id="@+id/vote_detial_give_up_ck"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:background="@drawable/vote_detial_ck"
                android:button="@null"
                android:focusable="false"
                android:clickable="false"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:text="@string/vote_detial_give_up"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_12dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:id="@+id/info_layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/vote_detial_diss"
            style="@style/txt_titleStyle1"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/vote_detial_diss_tips"
            android:textColor="@color/default_text_color"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#E6E6E6" />

        <TextView
            android:id="@+id/vote_detial_ok"
            style="@style/txt_titleStyle1"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/vote_detial_ok_tips"
            android:textColor="@color/default_button_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
