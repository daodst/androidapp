<resources>

    <style name="ButtomDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/buttom_choose_bg</item>
    </style>

    <style name="dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @drawable/progressbar_drawable
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <style name="nengliangProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_nengliang</item>
    </style>

    <style name="daikuanProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_daikuan</item>
    </style>

    <style name="CommonDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- dialog -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialogDim" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="dialogAnim">
        <item name="android:windowEnterAnimation">@anim/fragment_open</item>
        <item name="android:windowExitAnimation">@anim/fragment_close</item>
    </style>

    <declare-styleable name="CheckBox">
        <attr name="checkbox_color" format="color" />
        <attr name="unchecked_color" format="color" />
        <attr name="disabled_color" format="color" />
        <attr name="border_color" format="color" />
        <attr name="checkbox_size" format="dimension" />
        <attr name="invisible_in_unchecked_state" format="boolean" />
        <attr name="checked_drawable" format="reference" />
        <attr name="unchecked_drawable" format="reference" />
        <attr name="show_border_in_check_state" format="boolean"></attr>
    </declare-styleable>


    <style name="ToolBarTitle" parent="android:Widget">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/default_text_three_color</item>
    </style>

    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">#fff</item>
    </style>



    <style name="MyToolbar" parent="android:Widget">
        <item name="titleTextAppearance">@style/ToolBarTitle</item>
        <!--<item name="subtitleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle</item>-->
        <item name="android:minHeight">48dp</item>
        <item name="titleMargins">4dp</item>
        <item name="maxButtonHeight">56dp</item>
        <item name="collapseIcon">?attr/homeAsUpIndicator</item>
        <!--<item name="collapseContentDescription">@string/abc_toolbar_collapse_description</item>-->
        <item name="contentInsetStart">16dp</item>
        <!--<item name="android:paddingLeft">@dimen/abc_action_bar_default_padding_start_material</item>-->
        <!--<item name="android:paddingRight">@dimen/abc_action_bar_default_padding_end_material</item>-->
    </style>

    <style name="common_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:background">@drawable/default_btn_bg</item>
        <item name="android:layout_marginLeft">@dimen/exit_marginleft</item>
        <item name="android:layout_marginRight">@dimen/exit_marginrighter</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

    </style>

    <style name="emtpy_theme_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:background">@drawable/empty_theme_btn_bg</item>
        <item name="android:layout_marginLeft">@dimen/exit_marginleft</item>
        <item name="android:layout_marginRight">@dimen/exit_marginrighter</item>
        <item name="android:textColor">@color/default_theme_color</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

    </style>

    <style name="gray_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:background">@drawable/gray_btn_bg</item>
        <item name="android:layout_marginLeft">@dimen/exit_marginleft</item>
        <item name="android:layout_marginRight">@dimen/exit_marginrighter</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

    </style>

    <style name="txt_titleStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDialogAnim">
        <item name="android:windowEnterAnimation">@anim/buttom_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/buttom_dialog_out_anim</item>
    </style>


    <!-- MyPullableListViewview -->
    <declare-styleable name="MyPullableListView">
        <!--  loading -->
        <attr name="showLoading" format="boolean" />
        <!-- listview  -->
        <attr name="itemDivider" format="reference|color" />
        <!-- listview -->
        <attr name="itemDividerHeight" format="dimension" />
        <!-- listView padding, dividerHeight -->
        <attr name="listPaddingTop" format="dimension" />
        <attr name="listPaddingBottom" format="dimension" />
    </declare-styleable>


</resources>
