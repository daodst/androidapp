<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_5dp"
                android:layout_weight="1">
            </View>
            <View
                android:id="@+id/progress_weight"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="@dimen/dimen_5dp"
                android:background="#dedede">
            </View>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_5dp"
                android:layout_weight="1">
            </View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/round_1"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_round"/>
            <ImageView
                android:id="@+id/round_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gray_round"/>
            <ImageView
                android:id="@+id/round_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/gray_round"/>
            <ImageView
                android:id="@+id/round_4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/gray_round"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/progress_text1"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/progress_text2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#666"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""/>
        <TextView
            android:id="@+id/progress_text3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#666"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/progress_text4"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
</LinearLayout>
