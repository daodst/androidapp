<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <common.app.ui.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/qr_result_title">
    </common.app.ui.view.TitleBarView>


    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/scan_text_result"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_18dp"
        android:text="@string/qr_result_tips"/>

    <TextView
        android:id="@+id/qr_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_top_background_color"
        android:padding="@dimen/dimen_18dp"
        android:textSize="@dimen/dimen_16sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp"/>

    <Button
        android:id="@+id/copy_text"
        style="@style/common_button"
        android:text="@string/copy_text"
        android:textSize="@dimen/bt_lg_size"/>
</LinearLayout>
