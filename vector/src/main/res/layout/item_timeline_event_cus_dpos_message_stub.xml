<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            tools:ignore="ContentDescription"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cus_msg_ck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textStyle="bold"
            android:text="@string/msg_cus_dpos_title"
            android:textColor="#ff03b384"
            android:textSize="16sp" />
    </LinearLayout>


    <com.text.alginlib.XQJustifyTextView
        android:id="@+id/messageCusDposTextView"
        style="@style/Widget.Vector.TextView.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@sample/messages.json/data/message"
        android:textStyle="bold"
        tools:background="@color/red"
        tools:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messageCusDposMethod"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/messageCusDposMethod"
            android:background="@drawable/bg_award_bt"
            android:textColor="#ff03b384"
            android:textSize="15sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/messageCusDposTo"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_award_bt"
            android:text="@string/messageCusDposTo"
            android:textColor="#ff03b384"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
