<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cus_msg_ck"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/cusDaoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="@string/cusDaoName"
            android:textColor="#ff03b384"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="1px" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12">

        <ImageView
            android:id="@+id/cusDaoIv"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:background="@drawable/cus_dao_bg"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/cusDaoBt"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:background="@drawable/bg_cus_dao_bt"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cus_dao_arrow_left"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/cusDaoBtTips"
                android:textColor="#ff02b385"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cus_dao_arrow_right"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/cusDaoTimeView"
        style="@style/Widget.Vector.TextView.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="right"
        android:layout_marginTop="3dp"
        android:tag="messageTimeView"
        tools:background="@color/green"
        android:textColor="?vctr_content_secondary"
        tools:ignore="RtlHardcoded"
        tools:text="@tools:sample/date/hhmm" />

</LinearLayout>
