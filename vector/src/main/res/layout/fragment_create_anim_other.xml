<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:visibility="visible">

    <!-- view        android:layout_marginStart="-20dp"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <!--            -->
        <ImageView
            android:id="@+id/createAnimImg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="-14dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:0.749"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/createAnimTips1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-15dp"
        android:alpha="0"
        android:includeFontPadding="false"
        android:text="@string/other_create_anim_tips2"
        android:textColor="#DBD819"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:alpha="1" />

    <TextView
        android:id="@+id/createAnimTips2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:alpha="0"
        android:lineSpacingExtra="3dp"
        android:text="@string/other_create_anim_tips3"
        android:textColor="#ff0bbd8b"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/createAnimBottom"
        android:layout_width="320dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:alpha="0"
        android:src="@drawable/create_anim_bottom"
        tools:alpha="1" />

    <TextView
        android:id="@+id/createAnimBt"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:alpha="0"
        android:background="@drawable/bg_enter_bt"
        android:gravity="center"
        android:text="@string/other_create_anim_bt"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:alpha="1" />

</LinearLayout>